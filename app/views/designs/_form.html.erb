<%= form_for(@design, remote: true) do |f| %>
  <% if @design.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@design.errors.count, "error") %> prohibited this design from being saved:</h2>

      <ul>
      <% @design.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

	<%= f.fields_for :patterns do |builder| %>
	  <%= render 'pattern_fields', f: builder %>
	<% end %>
