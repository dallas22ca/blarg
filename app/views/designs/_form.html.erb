  <div class="field">
    <%= f.label :css %><br />
    <%= f.text_area :css %>
  </div>
  <div class="field">
    <%= f.label :js %><br />
    <%= f.text_field :js %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
